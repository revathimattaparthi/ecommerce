<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addProduct();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>ProductId</th>
                    <th>CategoryName</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>CreatedOn</th>
                    <th>UpdatedOn</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].ProductId%></td>
                    <td><%=data[i].CategoryName%></td>
                    <td><%=data[i].Name%></td>
                    <td><%=data[i].Description%></td>
                    <td><%=data[i].Price%></td>
                    <td><%=data[i].Quantity%></td>
                    <td><center> <img src="/../images/<%=data[i].Image%>"></center></td>
                    <td><%=data[i].Status%></td>
                     <td><%=data[i].CreatedOn%></td>
                    <td><%=data[i].UpdatedOn%></td>
                    <td>
                        <a class="a-inside edit" href="../products/edit/<%=data[i].ProductId%>">Edit</a>
                       
                        <a class="a-inside delete" href="../products/delete/<%=data[i].ProductId%>">Delete</a>   
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>
