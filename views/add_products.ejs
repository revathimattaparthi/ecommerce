<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/products/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">category</td>
                        <td>:
                             <select name="CategoryId">
                             <% for(var i = 0; i < data.length;i++){ %>
                             <option value="<%=data[i].CategoryId%>"> <%=data[i].Name%></option>
                             <% } %> 
                            </select>
                        </td>
                 </tr><br>
                  
                <tr>
                    <td class="label">Name</td><td>:<input type="text" name="Name"required></td>
                </tr>
                <tr>
                    <td class="label">Description</td><td>: <input type="text" name="Description" required></td>
                </tr>
                 
                <tr>
                    <td class="label">Price</td><td>: <input type="text" name="Price" required></td>
                </tr>
                <tr>
                    <td class="label">Quantity</td><td>: <input type="text" name="Quantity" required></td>
                </tr>
                <tr>
                    <td class="label">Image</td><td>: <input type="file"  name="Image" size="50" align= "center" width="50%" height= "50%"required></td>
                </tr>
                
                <tr>
                    <td class="label">Status</td><td>: <input type="checkbox" name="Status" value = "active"></td>
                </tr>
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">

                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAddProduct()">
                    </td>
                </tr>
                </table>
            </form>
            
        </div>
        
